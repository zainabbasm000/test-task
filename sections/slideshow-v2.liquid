<div class="z_jog_banner">
<div class="z_jog_ban_inn">
<div class="z_jog_ban_rel">
{% if section.settings.z_ban_img != blank %}
<div class="z_jog_ban_img">
<img src="{{ section.settings.z_ban_img | img_url: 'master'}}" class="z_jog_ban_pit"/>
</div>
{% endif %}

<div class="z_jos_pos_content z_position_{{ section.id }}">
<div class="z_jog_content_cont container">
<div class="z_jos_cont_abs"> 
<div class="z_jog_content_head">
<h3 class="z_jog_text_head">{{ section.settings.z_heading }}</h3> 
</div>
<div class="z_jog_subhead_content">
<p class="z_jog_text_subhead"> {{ section.settings.z_subheading }}</p> 
</div>

<a href="{{ section.settings.z_btn_url }}" class="z_url_button" > {{ section.settings.z_btn_text }}
<svg width="28" height="13" viewBox="0 0 28 13" fill="none" xmlns="http://www.w3.org/2000/svg">
